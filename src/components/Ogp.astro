---
export interface Props {
    title: string;
    type?: string;
    description?: string;
    imagePath?: string;
    imageAlt?: string;
}

const props = Astro.props;

const title = `${props.title} - tukinami.github.io`;
const type = props.type ?? "website";
const description = props.description ?? "月波 清火の制作したものについて記録しているサイト。";
const baseUrl = "https://tukinami.github.io";
const url = baseUrl + Astro.url.pathname;
const imagePath = props.imagePath ?? "/assets/ogp_default.jpg";
const imageUrl = baseUrl + imagePath;
const imageAlt = props.imageAlt ?? "tukinami.github.ioのOGP画像。サイトの名前とアイコンが描かれている。";
---
<meta property="og:site_name" content="tukinami.github.io" />
<meta property="og:title" content={title} />
<meta property="og:type" content={type} />
<meta property="og:description" content={description} />
<meta property="og:url" content={url} />
<meta property="og:locale" content="ja_JP" />
<meta property="og:image" content={imageUrl} />
<meta property="og:image:width" content="1280" />
<meta property="og:image:height" content="640" />
<meta property="og:image:alt" content={imageAlt} />
<meta name="twitter:card" content="summary_large_image" />
